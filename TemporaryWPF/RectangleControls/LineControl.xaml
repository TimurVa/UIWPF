<UserControl x:Class="TemporaryWPF.RectangleControls.LineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemporaryWPF.RectangleControls"
             mc:Ignorable="d">
    
    <Canvas x:Name="lcgrid" MouseLeftButtonDown="Lcgrid_MouseLeftButtonDown" 
          MouseLeftButtonUp="Lcgrid_MouseLeftButtonUp" MouseMove="Lcgrid_MouseMove" >
        <Canvas.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Delete" Click="MenuItem_Click"></MenuItem>
            </ContextMenu>
        </Canvas.ContextMenu>
        
        <Rectangle Fill="SandyBrown" Height="{Binding ElementName=lcgrid, Path=ActualHeight}"
               Width="{Binding ElementName=lcgrid, Path=ActualWidth}"></Rectangle>
        <Ellipse x:Name="lcellipse" Fill="Black"
                 Canvas.Left="10" Canvas.Top="5"
                Width="10" Height="10" AllowDrop="True"></Ellipse>
    </Canvas>

</UserControl>
